{
  "name": "eth-event-registration-backend",
  "version": "0.1.1",
  "main": "src",
  "engines": {
    "node": "8.11.3"
  },
  "scripts": {
    "start": "node .",
    "test": "jest",
    "test:unit": "npm test \"src/**/!(index).test.js\"",
    "test:integration": "npm test \"src/**/index.test.js\"",
    "coverage": "npm test -- --coverage",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "dev": "nodemon -i \"*.test.js\" .",
    "pm2": "pm2 start ./ecosystem.config.js",
    "dev-test": "cross-env NODE_ENV=test nodemon -i \"*.test.js\" .",
    "build": "jest",
    "prod": "nodemon -i \"*.test.js\" .",
    "prod2": "cross-env NODE_ENV=production nodemon -i \"*.test.js\" -r dotenv-safe/config .",
    "lint": "eslint src",
    "docs": "apidoc -i src -o docs && apidoc-markdown -p docs -o DOCS.md",
    "postdocs": "opn docs/index.html"
  },
  "jest": {
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "<rootDir>/test/setup.js"
  },
  "author": "Hasitha Seneviratne",
