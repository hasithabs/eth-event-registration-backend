    "nock": "^9.0.2",
    "nodemon": "^1.10.2",
    "opn-cli": "^3.1.0",
    "signale": "^1.2.1",
    "sinon": "^1.17.5",
    "sleep": "^5.1.1",
    "supertest": "^2.0.0",
    "supertest-as-promised": "^4.0.0"
  },
